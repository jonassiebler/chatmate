# ChatMate Testing Framework Configuration

# Test Framework Configuration
FRAMEWORK=bats
TEST_DIR=tests
COVERAGE_THRESHOLD=80

# Bats Configuration
BATS_CORE_VERSION=latest
BATS_SUPPORT_VERSION=latest
BATS_ASSERT_VERSION=latest

# Test Categories
UNIT_TESTS=true
INTEGRATION_TESTS=true
QUALITY_TESTS=true

# Quality Tools Configuration
MARKDOWNLINT_CONFIG=.markdownlint.json
SHELLCHECK_ENABLED=true

# CI/CD Configuration
PARALLEL_JOBS=2
UPLOAD_ARTIFACTS=true
FAIL_FAST=false

# Test Timeouts (in seconds)
UNIT_TEST_TIMEOUT=300
INTEGRATION_TEST_TIMEOUT=600
QUALITY_TEST_TIMEOUT=120

# Reporting
GENERATE_HTML_REPORT=false
GENERATE_JUNIT_REPORT=false
VERBOSE_OUTPUT=false

# Platform Testing
TEST_MACOS=true
TEST_LINUX=true
TEST_WINDOWS=true
