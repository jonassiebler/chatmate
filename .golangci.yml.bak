# golangci-lint configuration file
run:
  timeout: 5m
  issues-exit-code: 1
  tests: true
  go: '1.23'

linters:
  enable:
    - errcheck
    - gosimple
    - govet
    - ineffassign
    - staticcheck
    - unused
    - gofmt
    - goimports
    - goconst
    - misspell
  disable:
    - typecheck # Can be problematic with Go version mismatches
    - lll       # Line length can be overly strict
    - dupl      # Duplicate detection can be noisy

linters-settings:
  gofmt:
    simplify: true
  goimports:
    local-prefixes: github.com/jonassiebler/chatmate
  goconst:
    min-len: 2
    min-occurrences: 3
  misspell:
    locale: US

issues:
  exclude-rules:
    - path: _test\.go
      linters:
        - goconst
    - path: cmd/
      linters:
        - goconst
  max-issues-per-linter: 50
  max-same-issues: 10
